{
  "name": "mavrkscribe",
  "productName": "MavrkScribe",
  "version": "1.0.0",
  "description": "AI-powered medical scribe application for healthcare professionals",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron-reload . && electron .",
    "build": "electron-builder",
    "dist": "electron-builder --mac",
    "dist-win": "electron-builder --win",
    "dist-all": "electron-builder -mwl"
  },
  "keywords": [
    "medical",
    "scribe",
    "healthcare",
    "AI",
    "transcription"
  ],
  "author": "Mavrk",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-transcribe-streaming": "^3.699.0",
    "dotenv": "^16.0.3",
    "electron-store": "^8.1.0",
    "mic": "^2.1.2",
    "openai": "^4.73.0"
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.mavrk.scribe",
    "productName": "MavrkScribe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!.gitignore",
      "!README.md",
      "!dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "icon": "icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.ico",
      "publisherName": "Mavrk",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MavrkScribe",
      "license": "LICENSE.txt",
      "perMachine": false,
      "allowElevation": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Medical",
      "desktop": {
        "Name": "MavrkScribe",
        "Comment": "AI-powered medical scribe application",
        "Categories": "Medical;Office;"
      }
    }
  }
}
